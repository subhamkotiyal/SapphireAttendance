<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="@dimen/_48sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/icon_back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:elevation="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_4sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Full name"
                    android:textSize="@dimen/_12sdp">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/user"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <EditText
                        android:id="@+id/ed_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </EditText>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/emailadd"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <EditText
                        android:id="@+id/ed_emailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:enabled="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/emailvalue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </EditText>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/phone"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/ic_local_phone"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <EditText
                        android:id="@+id/ed_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:enabled="false"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/phonevalue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/addressess"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/marker"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <EditText
                        android:id="@+id/ed_addresslocation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/chandigarh"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </EditText>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/dateofbirth"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">

                </TextView>

                <LinearLayout
                    android:id="@+id/ll_calender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/calendar"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>

                    <EditText
                        android:id="@+id/ed_dob"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:enabled="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/dob"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </EditText>


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_updateprofile"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_34sdp"
        android:text="@string/updateprofile"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />


    </LinearLayout>


</LinearLayout>