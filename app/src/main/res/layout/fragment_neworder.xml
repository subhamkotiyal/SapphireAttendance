<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:text="@string/add"
        android:id="@+id/tv_add"
        android:background="@drawable/reactnagular_drawable"
        android:paddingStart="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="end"
        android:drawableLeft="@drawable/add1"
        android:drawablePadding="@dimen/_16sdp"
        android:drawableStart="@drawable/add1"
        android:gravity="end"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_height="wrap_content">

    </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_addview"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Itename"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">



            </TextView>


            <AutoCompleteTextView
                android:id="@+id/autocompleteEditTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/autocomplete_drawable"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:text=""
                android:hint="@string/itemname"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_10sdp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="#000000">


            </AutoCompleteTextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/quant"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content">

                    </TextView>

                    <me.himanshusoni.quantityview.QuantityView
                        android:id="@+id/quantityView_default"
                        android:layout_width="@dimen/_92sdp"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:background="@color/colorPrimary"
                        app:qv_addButtonBackground="@color/colorPrimary"
                        app:qv_quantityBackground="@color/colorPrimary"
                        app:qv_quantityTextColor="@color/white"
                        app:qv_removeButtonTextColor="@color/white"
                        app:qv_addButtonTextColor="@color/white"
                        app:qv_removeButtonBackground="@color/colorPrimary"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/price"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/rupees"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content">


                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/add"
                android:id="@+id/tv_addorder"
                android:background="@color/colorPrimary"
                android:paddingStart="@dimen/_40sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>






        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:id="@+id/rv_neworders"
            android:layout_height="wrap_content">


        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>

