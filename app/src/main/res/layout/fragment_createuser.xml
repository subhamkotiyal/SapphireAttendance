<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_42sdp">


        <ImageView
            android:layout_width="@dimen/_32sdp"
            android:src="@drawable/ic_back"
            android:id="@+id/iv_backfromuser"
            android:layout_margin="@dimen/_12sdp"
            android:layout_height="@dimen/_32sdp">


        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edituser"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:text="@string/createnewuser"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_16sdp"
           >


        </TextView>


    </RelativeLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_icon"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_user">

                </ImageView>


                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ed_name"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="@string/names"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/grey">


                </EditText>

            </RelativeLayout>

            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_emailicon"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_email">

                </ImageView>


                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ed_emailaddress"
                    android:inputType="textEmailAddress"
                    android:layout_toRightOf="@+id/iv_emailicon"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="@string/emailadd"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/grey">


                </EditText>

            </RelativeLayout>

            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_password"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/password">

                </ImageView>


                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ed_password"
                    android:layout_toRightOf="@+id/iv_password"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/grey">


                </EditText>

            </RelativeLayout>


            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_phonenumber"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/password">

                </ImageView>


                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/ed_phonenumber"
                    android:layout_toRightOf="@+id/iv_phonenumber"
                    android:layout_height="@dimen/_38sdp"
                    android:hint="@string/phone"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/grey">


                </EditText>

            </RelativeLayout>


            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:id="@+id/rl_opencalender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_dateofbirth"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_calender">

                </ImageView>


                <TextView
                    android:id="@+id/ed_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_toRightOf="@+id/iv_dateofbirth"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/dateofbirth"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/_10sdp">


                </TextView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <RelativeLayout
                    style="@style/MyCustomFormTheme"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:id="@+id/iv_state"
                        android:layout_margin="@dimen/_12sdp"
                        android:src="@drawable/ic_calender">

                    </ImageView>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:id="@+id/ed_state"
                        android:layout_toRightOf="@+id/iv_state"
                        android:hint="@string/state"
                        android:textSize="@dimen/_10sdp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/grey">


                    </EditText>

                </RelativeLayout>

                <RelativeLayout
                    style="@style/MyCustomFormTheme"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:id="@+id/iv_city"
                        android:src="@drawable/ic_city">

                    </ImageView>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:id="@+id/ed_city"
                        android:layout_toRightOf="@+id/iv_city"
                        android:hint="@string/city"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textColorHint="@color/grey">


                    </EditText>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_spinner"
                style="@style/MyCustomFormTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/iv_role"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_role">

                </ImageView>


                <Spinner
                    android:id="@+id/sp_roles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_role"
                    android:background="@android:color/transparent"
                    android:hint="@string/role"
                    android:textColor="@color/blue_grey"
                    android:textColorHint="@color/blue_grey"
                    android:textSize="@dimen/_10sdp">


                </Spinner>

            </RelativeLayout>

            <RelativeLayout
                style="@style/MyCustomFormTheme"
                android:id="@+id/rl_spinnermanager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp">


                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:id="@+id/iv_usermanager"
                    android:layout_margin="@dimen/_12sdp"
                    android:src="@drawable/ic_role">

                </ImageView>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/iv_usermanager"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_manager"
                    android:hint="@string/role"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/grey">


                </Spinner>



            </RelativeLayout>

                        <Button
                            android:id="@+id/btn_createuser"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:text="@string/createuser"
                            android:textSize="@dimen/_12sdp"
                            android:drawableEnd="@drawable/arrow"
                            android:drawableRight="@drawable/arrow"
                            android:background="@drawable/drawable_curve"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_32sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            style="@style/Widget.MaterialComponents.Button.Icon" />


        </LinearLayout>



    </ScrollView>


</LinearLayout>