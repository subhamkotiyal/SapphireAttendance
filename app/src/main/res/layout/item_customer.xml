<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_12sdp"
        android:elevation="@dimen/_16sdp"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="wrap_content">
            
            
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:text="@string/clientnamse"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content">
                
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:id="@+id/tv_customername"
                android:textSize="@dimen/_10sdp"
                android:text="@string/clientname"
                android:layout_height="wrap_content">

            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/cb_selectcust"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                />
            
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/contact"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/phonevalue"
                android:id="@+id/tv_customernum"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/addres"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_address"
                    android:text="@string/addressvalue"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/assigned"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_assigneduser"
                    android:text="@string/addressvalue"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/reactnagular_draw"
                    android:layout_height="@dimen/_4sdp">

                </View>


                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="@string/lastorder"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/datevalues"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_6sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="@drawable/reactnagular_draw"
                    android:layout_height="@dimen/_4sdp">

                </View>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/pendingamount"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/rupees"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/ll_viewcustomer"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/ic_eye"
                        android:id="@+id/iv_catDelete"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/view"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/ll_editcustomer"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/pencil"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/edits"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/ll_deletecustomer"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/delete"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/delete"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/ll_addbill"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/add1"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/addbill"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        
    </androidx.cardview.widget.CardView>



</LinearLayout>