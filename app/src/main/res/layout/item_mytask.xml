<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_roottask"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="match_parent">


            <View
                android:layout_width="@dimen/_4sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="@dimen/_124sdp">

            </View>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:src="@drawable/green_circle"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="1dp">


            </de.hdodenhof.circleimageview.CircleImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/paymentreceive"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp">


                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:text="@string/youwill"
                    android:textSize="@dimen/_10sdp">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:src="@drawable/customer"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_10sdp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/visitto"
                        android:textSize="@dimen/_9sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/clientname"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="@dimen/_6sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:src="@drawable/square_box">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/status">


                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/pending"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/black">


                        </TextView>


                    </LinearLayout>





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp">


                        <ImageView
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/clock">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/dateandtime">


                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/datevalue"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:textColor="@color/black">


                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/order">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/lastorder"
                            android:textSize="@dimen/_9sdp"
                          />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:text="@string/ordervalue"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp"
                            />


                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/payment">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:text="@string/duepayment"
                        android:textSize="@dimen/_9sdp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:text="@string/na"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text="@string/seemore"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:textSize="@dimen/_9sdp"
                    />



                </LinearLayout>


            </LinearLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>