<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="@dimen/_46sdp">


       <TextView
           android:layout_width="wrap_content"
           android:text="@string/attendnace"
           android:layout_centerInParent="true"
           android:layout_centerVertical="true"
           android:textColor="@color/white"
           android:textSize="@dimen/_15sdp"
           android:layout_centerHorizontal="true"
           android:layout_height="wrap_content">

       </TextView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_spinnerusers"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp">


        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_12sdp"
            android:id="@+id/iv_spinnerproductunit"
            android:layout_margin="@dimen/_12sdp"
            android:src="@drawable/ic_role">

        </ImageView>



        <Spinner
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/iv_spinnerproductunit"
            android:layout_height="wrap_content"
            android:id="@+id/sp_userslisitng"
            android:hint="@string/customer"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/blue_grey"
            android:background="@android:color/transparent"
            android:textColorHint="@color/blue_grey">


        </Spinner>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_32sdp"
        android:text="@string/search"
        android:textSize="@dimen/_12sdp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        style="@style/Widget.MaterialComponents.Button.Icon"
        />


</LinearLayout>