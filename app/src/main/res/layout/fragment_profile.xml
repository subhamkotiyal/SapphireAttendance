        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:elevation="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_weight="1"
                        android:text="Full name"
                        android:textSize="@dimen/_12sdp">


                    </TextView>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/rl_editprofile"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:src="@drawable/ic_edit"
                            android:id="@+id/iv_editicon"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_centerInParent="true"
                            android:layout_height="@dimen/_14sdp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Edit"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/iv_editicon"
                            android:layout_height="wrap_content">


                        </TextView>


                    </RelativeLayout>



                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:src="@drawable/user"
                        app:tint="@color/colorPrimaryDark"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_height="@dimen/_16sdp">


                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/adward"
                        android:id="@+id/tv_username"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:layout_height="wrap_content">



                    </TextView>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Email id"
                    android:textSize="@dimen/_12sdp">


                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:src="@drawable/ic_email"
                        app:tint="@color/colorPrimaryDark"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_height="@dimen/_16sdp">


                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/emailvalue"
                        android:id="@+id/tv_useremail"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:layout_height="wrap_content">



                    </TextView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Mobile number"
                    android:textSize="@dimen/_12sdp">


                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:src="@drawable/ic_local_phone"
                        app:tint="@color/colorPrimaryDark"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_height="@dimen/_16sdp">


                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/phonevalue"
                        android:id="@+id/tv_phonenumber"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:layout_height="wrap_content">



                    </TextView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/addressess"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">


                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/marker"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="@string/chandigarh"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </TextView>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/dateofbirth"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible">


                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:src="@drawable/calendar"
                        app:tint="@color/colorPrimaryDark">


                    </ImageView>


                    <TextView
                        android:id="@+id/tv_dateofbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="@string/dob"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp">


                    </TextView>


                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>






    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="@dimen/_46sdp"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent"
        android:id="@+id/pv_progress"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="@style/SpinKitView.Circle"
        android:layout_height="@dimen/_46sdp">



    </com.github.ybq.android.spinkit.SpinKitView>

</RelativeLayout>