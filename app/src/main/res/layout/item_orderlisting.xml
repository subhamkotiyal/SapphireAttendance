<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_12sdp"
        android:elevation="@dimen/_12sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:text="@string/clientnamse"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:id="@+id/tv_clientname"
                    android:text="@string/clientname"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:text="@string/totalpricedot"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:id="@+id/tv_totalprice"
                    android:text="@string/rupees"
                    android:inputType="number"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/paymentreceive"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:id="@+id/tv_receivedpayment"
                    android:text="@string/rupees"
                    android:inputType="number"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/paymentpending"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:id="@+id/tv_pendingpayment"
                    android:text="@string/rupees"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="number"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:text="@string/status"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_status"
                    android:layout_weight="1.3"
                    android:text="@string/received"
                    android:inputType="number"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/ll_view"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/blue_grey"
                    android:layout_margin="@dimen/_12sdp"
                    android:layout_height="@dimen/_34sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/colorPrimary"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/view"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/ll_remove"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="@dimen/_34sdp"
                    android:background="@color/blue_grey"
                    android:layout_margin="@dimen/_12sdp"
                   >

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/delete"
                        android:id="@+id/iv_deleteproduct"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/deleteorder"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight=".8"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:id="@+id/ll_editorder"-->
<!--                    android:gravity="center"-->
<!--                    android:orientation="horizontal"-->
<!--                    android:layout_margin="@dimen/_12sdp"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <ImageView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:id="@+id/iv_updateproduct"-->
<!--                        android:src="@drawable/pencilplace"-->
<!--                        app:tint="@color/colorPrimary"-->
<!--                        android:layout_height="@dimen/_12sdp"/>-->


<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:text="@string/edits"-->
<!--                        android:layout_marginStart="@dimen/_3sdp"-->
<!--                        android:layout_marginLeft="@dimen/_3sdp"-->
<!--                        android:layout_height="wrap_content">-->

<!--                    </TextView>-->

<!--                </LinearLayout>-->





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/ll_addpayment"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@color/blue_grey"
                    android:gravity="center"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_margin="@dimen/_12sdp"
                  >

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/colorPrimary"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/addpayment"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:id="@+id/ll_status"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/blue_grey"
                    android:layout_margin="@dimen/_12sdp"
                    android:layout_height="@dimen/_34sdp">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/add1"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/addstatus"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_height="wrap_content">

                    </TextView>


                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_142sdp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ll_return"
                android:background="@color/blue_grey"
                android:layout_margin="@dimen/_12sdp"
                android:layout_height="@dimen/_34sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:src="@drawable/ic_attendance"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_12sdp">

                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Return"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>