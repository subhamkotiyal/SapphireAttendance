<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_12sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_12sdp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/customerNamedot"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/tv_customrname"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight=".8"
                    android:text="@string/billnumber"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:id="@+id/tv_billnumber"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/totalamount"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:id="@+id/tv_totalamount"
                    android:textSize="@dimen/_10sdp"
                    android:layout_height="wrap_content">


                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/paymentreceive"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tv_paymentreceive"
                    android:layout_height="wrap_content">


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/paymentpending"
                    android:layout_height="wrap_content">


                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="1.2"
                    android:id="@+id/tv_pendingpayment"
                    android:layout_height="wrap_content">


                </TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_delete"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/delete"
                        app:tint="@color/colorPrimary"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/delete"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_edit"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:src="@drawable/pencilplace"
                        app:tint="@color/colorPrimary"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/edits"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>


            </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>