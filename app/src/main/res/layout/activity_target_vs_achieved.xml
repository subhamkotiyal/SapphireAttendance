<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.reports.Target_vs_achieved">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@color/colorPrimary">



        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back"
            android:id="@+id/iv_backfromreport"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_height="wrap_content">


        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/itemReport"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp">

        </TextView>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Readyfordispatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/SelectExecutivetogethisreport"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_agent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/fieldmanager"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_target"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/target"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/rl_fieldmanager"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline">


                            <Spinner
                                android:id="@+id/ta_userslisitng"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_target"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:id="@+id/sp_target"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>
                        </RelativeLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/ll_fieldmanager"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:id="@+id/tv_datetag"
                            android:text="@string/date"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/tv_monthlytag"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monthly"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_yearspinner"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/rl_fieldmanagercalender"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline">

                            <TextView
                                android:id="@+id/tv_fieldmanagerdate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:hint="@string/date"
                                android:textColor="@color/black"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </TextView>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_monthly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:id="@+id/sp_monthly"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:id="@+id/ll_year"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/year"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:id="@+id/rl_year"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:layout_width="wrap_content"
                                android:id="@+id/sp_year"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>


                    </LinearLayout>



                    <TextView
                        android:id="@+id/search_executed"
                        android:layout_width="@dimen/_64sdp"
                        android:clickable="true"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/button_blue"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/search"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:focusable="true" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Readyfordispeatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/Selectmanagertogethisreport"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_managername"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/manager"
                            android:textSize="@dimen/_11sdp"/>

                        <TextView
                            android:id="@+id/tv_targetmanager"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/target"
                            android:textSize="@dimen/_11sdp"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/rl_manager"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline">


                            <Spinner
                                android:id="@+id/ta_useruuslisitng"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_managertarget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:id="@+id/sp_managerspinnertarget"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>
                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/date"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monthly"
                            android:visibility="gone"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:id="@+id/rl_managercalender"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@drawable/spinner_outline">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_managerdate"
                                android:background="@android:color/transparent"
                                android:hint="@string/date"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:paddingLeft="@dimen/_8sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </TextView>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rl_managermonth"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:id="@+id/sp_monthmanager"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/year"
                            android:visibility="gone"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:id="@+id/rl_yearmanager"
                            android:background="@drawable/spinner_outline"
                            android:orientation="vertical">


                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:id="@+id/sp_yearmanager"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@android:color/transparent"
                                android:hint="@string/customer"
                                android:textColor="@color/blue_grey"
                                android:textColorHint="@color/blue_grey"
                                android:textSize="@dimen/_10sdp">


                            </Spinner>


                        </RelativeLayout>


                    </LinearLayout>



                    <TextView
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/button_blue"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/search"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>




</LinearLayout>