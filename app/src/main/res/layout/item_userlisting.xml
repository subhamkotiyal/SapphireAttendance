<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:elevation="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_6sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_54sdp"
                        android:layout_height="@dimen/_54sdp"
                        android:layout_margin="@dimen/_12sdp"
                        android:src="@drawable/model">


                    </de.hdodenhof.circleimageview.CircleImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_weight="1.7"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_clientname"
                        android:text="@string/clientname"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_email"
                        android:layout_marginTop="2dp"
                        android:text="@string/emailvalue"
                        android:textSize="@dimen/_10sdp">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_phonenumber"
                        android:text="@string/phonevalue"
                        android:textSize="@dimen/_10sdp">


                    </TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_34sdp"
                    android:gravity="center"
                    android:layout_weight=".6">


                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:id="@+id/iv_userlocation"
                        android:src="@drawable/information"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_height="@dimen/_12sdp">

                    </ImageView>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_12sdp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/ll_delete"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:src="@drawable/delete"
                            app:tint="@color/colorPrimary"
                            android:layout_height="@dimen/_12sdp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/delete"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_height="wrap_content">

                        </TextView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:id="@+id/ll_edit"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:src="@drawable/pencilplace"
                            app:tint="@color/colorPrimary"
                            android:layout_height="@dimen/_12sdp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/edits"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_height="wrap_content">

                        </TextView>



                    </LinearLayout>

                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/ll_settarget"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:src="@drawable/ic_calender"
                            app:tint="@color/colorPrimary"
                            android:layout_height="@dimen/_12sdp">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/settarget"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_height="wrap_content">

                        </TextView>



                    </LinearLayout>


<!--                    <LinearLayout-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:id="@+id/ll_viewattendance"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:gravity="end"-->

<!--                        android:layout_height="wrap_content">-->

<!--                        <ImageView-->
<!--                            android:layout_width="@dimen/_12sdp"-->
<!--                            android:src="@drawable/ic_calender"-->
<!--                            app:tint="@color/colorPrimary"-->
<!--                            android:layout_height="@dimen/_12sdp">-->

<!--                        </ImageView>-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:text="@string/viewattendance"-->
<!--                            android:textStyle="bold"-->
<!--                            android:textSize="@dimen/_10sdp"-->
<!--                            android:textColor="@color/colorPrimary"-->
<!--                            android:layout_marginStart="@dimen/_4sdp"-->
<!--                            android:layout_marginLeft="@dimen/_4sdp"-->
<!--                            android:layout_height="wrap_content">-->

<!--                        </TextView>-->



<!--                    </LinearLayout>-->


                </LinearLayout>



            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>